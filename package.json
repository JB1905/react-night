{
  "name": "react-night",
  "version": "1.0.0-alpha.0",
  "description": "night.js implementation for React",
  "author": "Jakub Biesiada",
  "license": "MIT",
  "main": "lib/react-night.cjs.js",
  "module": "lib/react-night.esm.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "release": "rimraf lib/* && npm run prettier && npm run lint && npm run build",
    "build": "rollup -c",
    "watch": "npm run build -- --watch",
    "lint": "eslint 'src/**/*.{tsx,ts}' --fix",
    "prettier": "prettier --write 'src/**/*.{tsx,ts}'"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/JB1905/react-night.git"
  },
  "keywords": [
    "React",
    "hooks",
    "dark",
    "night",
    "switch",
    "sun"
  ],
  "bugs": {
    "url": "https://github.com/JB1905/react-night/issues"
  },
  "homepage": "https://github.com/JB1905/react-night#readme",
  "dependencies": {
    "night.js": "^1.2.0"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^7.1.1",
    "@types/react": "^16.9.19",
    "@typescript-eslint/parser": "^2.19.2",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.18.3",
    "eslint-plugin-react-hooks": "^2.3.0",
    "husky": "^4.2.1",
    "lint-staged": "^10.0.7",
    "prettier": "^1.19.1",
    "react": "^16.12.0",
    "rollup-plugin-terser": "^5.2.0",
    "rollup-plugin-typescript2": "^0.25.3",
    "typescript": "^3.7.5"
  },
  "peerDependencies": {
    "react": ">=16.8.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{tsx,ts}": [
      "npm run prettier",
      "npm run lint"
    ]
  }
}
